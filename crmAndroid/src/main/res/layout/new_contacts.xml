<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <com.paic.crm.widget.XEditText
            android:id="@+id/search_contacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/search_bar_icon_normal"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:background="@drawable/search_bc"
            android:layout_margin="10dp"
            android:textColor="@color/black_text"
            android:textColorHint="@color/color_me_txt"
            android:hint="@string/search"
            android:singleLine="true"
            android:textSize="15sp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/contact_list_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg"
        >

        <com.paic.crm.widget.MsgListView
            android:id="@+id/contacts_listView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="vertical"
            android:scrollbarThumbVertical="@color/font_corlor_gray"
            android:scrollbarSize="@dimen/scrollbar_3dp"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/dialog"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#000000"
            android:background="@color/color_me"
            android:text="shishi"
            android:textSize="30.0dip"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/no_searched"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/no_searched"
            android:gravity="center"
            android:textColor="#000000"
            android:visibility="gone"/>
        <com.paic.crm.widget.SideBar
            android:id="@+id/sidebar"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="match_parent"/>
    </RelativeLayout>

</LinearLayout>