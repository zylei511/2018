<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chat_room_date"
            android:layout_width="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/time_seleter"
            android:text="@string/chat_date"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="15dp"
            android:textSize="13sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/chat_room_headview"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:contentDescription="tu"
                android:src="@drawable/default_icon" />

            <RelativeLayout
                android:id="@+id/txt_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_toRightOf="@+id/chat_room_headview"
                >


                <TextView
                    android:id="@+id/chat_room_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="250dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/chatfrom_bg_in"
                    android:singleLine="false"
                    android:gravity="center_vertical"
                    android:text="@string/chat_content"
                    android:textColor="@color/list_text_press"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_pic"
                    android:visibility="gone"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/ic_launcher"
                    />
            </RelativeLayout>

            <ProgressBar
                android:id="@+id/self_progress_bar"
                style="?android:progressBarStyleSmall"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_5dp"
                android:layout_toRightOf="@+id/txt_layout"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
