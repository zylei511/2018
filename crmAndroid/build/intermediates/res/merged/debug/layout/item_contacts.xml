<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimary">
    <TextView
        android:id="@+id/catalog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_wide_line"
        android:paddingBottom="2dip"
        android:paddingLeft="5dip"
        android:paddingTop="2dip"
        android:textSize="10sp"
        android:textColor="#454545" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/contacts_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/default_icon"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/contacts_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/contacts_icon"
            android:text="name"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/channels_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="visible">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/color_divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:weightSum="2">
            <ImageView
                android:id="@+id/channel_weixin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_c_wechat_02"
                android:layout_weight="1"
               />

            <ImageView
                android:id="@+id/channel_sms"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_c_message_02"
                android:layout_weight="1"
                />
            </LinearLayout>
    </RelativeLayout>

</LinearLayout>