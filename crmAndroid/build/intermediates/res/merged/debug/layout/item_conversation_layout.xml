<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_conversation_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_talk_seleted" />

            <TextView
                android:id="@+id/iv_conversation_dot"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:background="@drawable/redround" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100">
            <ImageView
                android:id="@+id/tv_channel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp"
                android:src="@drawable/icon_channel_weixin" />
            <TextView
                android:id="@+id/tv_msg_time"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_channel"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/margin_top_3dp"
                android:text="2015-1-21"
                android:textColor="@color/select_photo_bg"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_toLeftOf="@id/tv_channel"
                android:text="name"
                android:textColor="@color/select_photo_title_bg"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_msg_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_toLeftOf="@id/tv_msg_time"
                android:layout_marginLeft="20dp"
                android:text="name"
                android:textColor="@color/font_corlor_gray"
                android:singleLine="true"
                android:maxEms="10"
                android:layout_marginTop="@dimen/padding_5dp"
                android:ellipsize="end"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="10dp"
        android:background="@color/color_line"/>
</LinearLayout>