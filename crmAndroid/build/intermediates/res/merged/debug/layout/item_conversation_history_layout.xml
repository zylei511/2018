<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--<TextView-->
        <!--android:id="@+id/conversation_history_time"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="时间"-->
        <!--android:gravity="center"-->
        <!--android:textSize="15sp"-->
        <!--android:textColor="#000000"-->
        <!--android:background="@color/color_me"-->
        <!--android:visibility="gone"/>-->
    <!--<include layout="@layout/view_layout"/>-->
    <TextView
        android:id="@+id/date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_wide_line"
        android:paddingLeft="5dp"
        android:textSize="12sp"
        android:textColor="@color/select_photo_bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/channel_history"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/icon_channel_weixin" />


        <TextView
            android:id="@+id/msg_time_history"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/channel_history"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/margin_top_3dp"
            android:textColor="@color/select_photo_bg"
            android:text="2015-1-21"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/conversation_history_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:src="@drawable/icon_talk_seleted" />

        <TextView
            android:id="@+id/name_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/conversation_history_icon"
            android:layout_toLeftOf="@id/channel_history"
            android:textColor="@color/select_photo_title_bg"
            android:layout_marginLeft="@dimen/margin_left_10dp"
            android:layout_marginTop="5dp"
            android:text="name"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/msg_history_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_history"
            android:textColor="@color/font_corlor_gray"
            android:layout_toRightOf="@id/conversation_history_icon"
            android:layout_toLeftOf="@id/msg_time_history"
            android:text="name"
            android:layout_marginLeft="@dimen/margin_left_10dp"
            android:singleLine="true"
            android:ellipsize = "end"
            android:layout_marginTop="5dp"
            android:textSize="15sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_line"
        />
</LinearLayout>