<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    >
    <include layout="@layout/actionbar_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:text="@string/shock_switch"
            android:textColor="@color/black_text"
            android:gravity="center_vertical"
            android:textSize="@dimen/txt_17sp"
            android:layout_weight="1"
            />
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_vibrate"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:checked="true"
            app:showText="false"
            app:thumbTextPadding="@dimen/padding_5dp"
            android:layout_weight="1"
            android:thumb="@drawable/thumb"
            android:layout_marginRight="@dimen/margin_left_20dp"
            app:track="@drawable/switch_selector"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/color_line"
        android:layout_height="0.5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:text="@string/sound_switch"
            android:textColor="@color/black_text"
            android:gravity="center_vertical"
            android:textSize="@dimen/txt_17sp"
            android:layout_weight="1"
            />
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_sound"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_left_20dp"
            android:checked="true"
            app:showText="false"
            app:thumbTextPadding="@dimen/padding_5dp"
            android:layout_weight="1"
            android:thumb="@drawable/thumb"
            app:track="@drawable/switch_selector"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <TableRow
        android:id="@+id/tb_version"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:weightSum="2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/margin_left_20dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/txt_17sp"
            android:textColor="@color/black_text"
            android:text="@string/version"/>
        <TextView
            android:id="@+id/version"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black_text"
            android:gravity="right|center_vertical"
            android:layout_marginRight="20dp"
            android:text="版本信息"/>

    </TableRow>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <TableRow
        android:id="@+id/tb_cache"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:weightSum="2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/margin_left_20dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/txt_17sp"
            android:textColor="@color/black_text"
            android:text="清除缓存"/>
        <TextView
            android:id="@+id/cache"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black_text"
            android:gravity="right|center_vertical"
            android:layout_marginRight="20dp"
            android:text="缓存大小"/>

    </TableRow>


</LinearLayout>
